<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/answer_rounded"
    android:clipToPadding="true"
    android:elevation="6dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/answer_answer_user_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer_answer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="userId name"
        app:layout_constraintBottom_toBottomOf="@+id/answer_answer_user_photo"
        app:layout_constraintStart_toEndOf="@+id/answer_answer_user_photo"
        app:layout_constraintTop_toTopOf="@+id/answer_answer_user_photo" />

    <TextView
        android:id="@+id/answer_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/answer_answer_user_name"
        app:layout_constraintStart_toStartOf="@+id/answer_answer_user_photo"
        app:layout_constraintTop_toBottomOf="@+id/answer_answer_user_photo" />
</android.support.constraint.ConstraintLayout>